#!/bin/bash

# Pre-commit hook for Flutter Template
# This script runs code quality checks before allowing commits

echo "ğŸ” Running pre-commit checks..."

# Check if make is available
if ! command -v make &> /dev/null; then
    echo "âŒ Make is not installed. Please install make to run pre-commit checks."
    exit 1
fi

# Run code quality checks
echo "ğŸ“‹ Running code quality checks..."
if ! make quality-check; then
    echo "âŒ Code quality checks failed. Please fix the issues and try again."
    echo "ğŸ’¡ Hint: Run 'make quality' to automatically fix some issues."
    exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
if ! make test; then
    echo "âŒ Tests failed. Please fix failing tests and try again."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
echo "ğŸš€ Ready to commit!"

exit 0
